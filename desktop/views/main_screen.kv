<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Seznam známek"
            size_hint_y: None
            height: 40
        ScrollView:
            size_hint: (1, 1)  # Zajišťuje, že ScrollView zabírá celou dostupnou výšku
            do_scroll_y: True  # Povolení vertikálního scrollování
            do_scroll_x: False  # Zakázání horizontálního scrollování
            GridLayout:
                id: stamp_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height