#:kivy 1.2.0
<HoverButton>:
    theme_text_color: "Custom"
    text_color: self.color_text
    font_size: "18sp"
    theme_icon_color: "Custom"
    icon_color: self.color_text
    line_color: 0,0,0,0 
    md_bg_color: 0,0,0,0

<ClickableBox>:



<MainLayout>:
    orientation: "horizontal"
    md_bg_color: 0,0,0,1
            
    # LEvé menu
    MDBoxLayout:
        orientation: "vertical"
        spacing: 15
        padding: [10, 20, 10, 20]
        # md_bg_color: 1, 1,1, 0.1
        radius: [5,]
        size_hint_x: 0.25
        size_hint_y: 0.98

        MDBoxLayout:
            orientation: "vertical"
            MDLabel:
                text: "Logo"
                halign: "center"
                size_hint_y: 0.1
            
            HoverButton:
                text: "Home"
                size_hint_x: 1
                on_release: app.root.ids.screen_manager.current = "Home"
                
            HoverButton:
                text: "Emission"
                size_hint_x: 1
                on_release: app.root.ids.screen_manager.current = "Emission"

            HoverButton:
                text: "StampScreen"
                size_hint_x: 1
                on_release: app.open_detail_screen(1)

            MDBoxLayout:
                size_hint_y: 1
    # Middle 
    MDBoxLayout:
        orientation: "vertical"
        # Top tab
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
            MDBoxLayout:
                size_hint_x: 0.32
            MDTextField:
                hint_text: "Stamps search"
                mode: "round"
                max_text_length: 15
                helper_text: "Helper text for fun"
                size_hint_x: 0.35
            MDBoxLayout:
                size_hint_x: 0.32

        MDBoxLayout:
            size_hint_y: 0.02

        # Pravá část s obrazovkami
        ScreenManager:
            id: screen_manager               
            HomeScreen:
                name: "Home"
            EmissionScreen:
                name: "Emission"
            StampScreen:
                name: "Stamp"
        
        
        MDBoxLayout:
            size_hint_y: 0.02
    # space for right side
    MDBoxLayout:
        size_hint_x: 0.02
    
    # Right panel for stamps:
    ClickableBox:
        id: right_panel
        orientation: "vertical"
        size_hint_x: 0  # Standardně skrytý nastavení je pak pod on release na .45
        size_hint_y: 0.92
        padding: 10
        on_release: app.open_detail_screen(right_panel.stamp_id)

        MDBoxLayout:
            md_bg_color: 1, 1, 1, 1
            orientation: "vertical"
            padding: [10, 10, 10, 10]
            border_radius: 20
            radius: [15]
            md_bg_color: 1,1,1,0.08
            elevation: 4
            line_width: 1
            line_color: (1, 1, 1, 0.15)
            orientation: "vertical"
            spacing: 15

            # Informace o známce
            MDBoxLayout:
                size_hint: (1, 0.45)
                orientation: "vertical"
                spacing: 1
                FitImage:
                    id: right_panel_md3card_tamp_image
                    size_hint: (1, 0.8)
                    source: None
                    radius: [15, 15, 15, 15]
                    allow_stretch: True
                    keep_ratio: True
                    pos_hint: {"top":1}

                MDLabel:
                    id: stamp_name
                    text: "Stamp name"
                    halign: "left"
                    valign: "middle"
                    font_size: "18sp"
                    theme_text_color: "Custom"
                    text_color: 1,1,1,1
                    size_hint: 1, 0.1

                MDLabel:
                    id: right_panel_detail_about_stamps
                    text: "Tady budou detaily o známce."
                    text_size: self.size
                    halign: "left"
                    theme_text_color: "Custom"
                    text_color: 1,1,1,1
                    size_hint: 1, 0.2

            MDCard:
                size_hint: (1, 0.25)
                orientation: "vertical"
                border_radius: 20
                radius: [15]
                md_bg_color: 1,1,1,0.08
                elevation: 2
                line_width: 1
                line_color: (1, 1, 1, 0.15)
                MDLabel:
                    id: right_panel_number_of_stamp_type_inf
                    text: "Počet pod typu"
                    halign: "center"
                    valign: "middle"
                    theme_text_color: "Custom"
                    text_color: 1,1,1,1
                    
                MDLabel:
                    id: right_panel_saved_number_of_sale_inf
                    text: "Počet uložených prodeju v DB"
                    halign: "center"
                    valign: "middle"
                    theme_text_color: "Custom"
                    text_color: 1,1,1,1


<HomeScreen>:
    MDCard:
        size_hint: 1,1
        border_radius: 20
        radius: [15]
        md_bg_color: 1,1,1,0.08
        elevation: 4
        line_width: 1
        line_color: (1, 1, 1, 0.15)
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Home Screen pravá část"
                font_size: 24
                halign: "center"
                valign: "middle"

<EmissionScreen>:
    MDCard:
        size_hint: 1,1
        border_radius: 20
        radius: [15]
        md_bg_color: 1,1,1,0.08
        elevation: 4
        line_width: 1
        line_color: (1, 1, 1, 0.15)
        orientation: "vertical"
        # Výběr země
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            
            MDLabel:
                text: "Select Country:"
                size_hint_x: 0.3
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1,1,1,1

            MDDropDownItem:
                id: country_dropdown
                text: "Choose a country"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                text_color: 1,1,1,1
                on_release: root.show_countries_dropdown(self)
                ver_growth: "down"
                md_bg_color: 1,1,1,1
                theme_text_color: "Custom"
                text_color: 1,1,1,1

        # Seznam výsledků
        ScrollView:
            MDBoxLayout:
                id: results_box
                orientation: "vertical"
                adaptive_height: True         

<StampScreen>:
    MDCard:
        size_hint: 1,1
        border_radius: 20
        radius: [15]
        md_bg_color: 1,1,1,0.08
        elevation: 4
        line_width: 1
        line_color: (1, 1, 1, 0.15)
        padding: 10
        MDScrollView:
            size_hint: 1, 1  # Zajistí plnou velikost widgetu
            pos: 0,0
            # Hlavní BoxLayout
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height  # Automatická výška podle obsahu
                spacing: 10
                # Top horníébox s imagem a informacemi
                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 10
                    padding: 8
                    # Image
                    MDCard:
                        orientation: "vertical"
                        border_radius: 20
                        radius: [15]
                        md_bg_color: 1,1,1,0.08
                        elevation: 2
                        line_width: 1
                        line_color: (1, 1, 1, 0.15)
                        size: dp(300), dp(400)
                        size_hint: None, None
                        size: root.width * 0.3, root.height * 0.4
                        FitImage:
                            id: stamp_detail_md3card_tamp_image
                            radius: [15, 15, 15, 15]
                            allow_stretch: False
                            keep_ratio: True
                            source: ""
                            size_hint: 1, 1  

                    # Boxs in right side
                    MDCard:
                        size_hint: .45, 1
                        height: self.minimum_height  # Automatická výška podle obsahu
                        orientation: "vertical"
                        border_radius: 20
                        radius: [15]
                        md_bg_color: 1,1,1,0.08
                        elevation: 2
                        line_width: 1
                        line_color: (1, 1, 1, 0.15)
                        padding: 6
                        MDLabel:
                            id: stamp_detail_stamp_name
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            text: "Stamps name"
                            size_hint: 1, 0.2
                            font_size: "42sp" 

                        MDLabel:
                            id: stamp_detail_stamp_catalogue_number
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            text: "Cat. number"
                            size_hint: 1, 0.25
                            font_size: "28sp" 

                        MDLabel:
                            id: stamp_detail_stamp_nation_and_year
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            text: "Země / Rok"
                            size_hint: 1, 0.25
                            font_size: "14sp" 

                        MDLabel:
                            id: stamp_detail_stamp_emision
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            text: "Emise"
                            size_hint: 1, 0.25
                            font_size: "14sp" 

                        MDLabel:
                            id: stamp_detail_stamp_type
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            text: "Počet podtypu: "
                            size_hint: 1, 0.25
                            font_size: "14sp"
                    
                    #Sale information
                    MDCard:
                        size_hint: .30, 1
                        height: self.minimum_height  # Automatická výška podle obsahu
                        orientation: "vertical"
                        border_radius: 20
                        radius: [15]
                        md_bg_color: 1,1,1,0.08
                        elevation: 2
                        line_width: 1
                        line_color: (1, 1, 1, 0.15)
                        padding: 10
                        MDLabel:
                            id: stamp_detail_avg_auction_price_number
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            text: "Avg. auction price"
                            size_hint: 1, 0.35
                            font_size: "26sp"
                            halign: "center"
                        
                        MDLabel:
                            id: stamp_detail_avg_auction_price_information_label
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            text: "Avg. acution price"
                            size_hint: 1, 0.1
                            font_size: "16sp"
                            halign: "center"

                        MDLabel:
                            id: stamp_detail_catalogue_price_number
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            text: "Cat. price"
                            size_hint: 1, 0.35
                            font_size: "26sp" 
                            halign: "center"

                        MDLabel:
                            id: stamp_detail_catalogue_price_information_label
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            text: "Cat. price"
                            size_hint: 1, 0.1
                            font_size: "16sp" 
                            halign: "center"
                # Artciles
                MDCard:
                    id: stamp_detail_articles_for_one_stamp
                    size_hint: 1, None  
                    orientation: "vertical"
                    height: dp(250)  # Dynamická výška
                    border_radius: 20
                    radius: [15]
                    md_bg_color: 1, 1, 1, 0.08
                    elevation: 2
                    line_width: 1
                    line_color: (1, 1, 1, 0.15)
                    padding: 15
                    MDScrollView:
                        MDBoxLayout:
                            id: articles_container
                            size_hint_y: None
                            orientation: "vertical"
                            height: self.minimum_height
                            spacing: dp(10)
                            padding: dp(10)

                # Subtypes
                MDCard:
                    id: stamp_detail_subtype_mdcard_for_table
                    size_hint: 1, None
                    height: self.minimum_height  # Automatická výška podle obsahu
                    orientation: "vertical"
                    border_radius: 20
                    radius: [15]
                    md_bg_color: 1,1,1,0.08
                    elevation: 2
                    line_width: 1
                    line_color: (1, 1, 1, 0.15)
                    padding: 25

                #Graph + price with last selling/buying
                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 350
                    spacing: 10
                    padding: 0
                    MDCard:
                        id: stamp_detail_selling_graph
                        size_hint: .65, 1
                        height: self.minimum_height  # Automatická výška podle obsahu
                        orientation: "vertical"
                        border_radius: 20
                        radius: [15]
                        md_bg_color: 1,1,1,0.08
                        elevation: 2
                        line_width: 1
                        line_color: (1, 1, 1, 0.15)
                        padding: 10
                        # Přidáme container pro graf, aby bylo možné vykreslovat na Canvas
                        FloatLayout:
                            id: auction_sales_canvas
                            size_hint: 1, 1
                            pos_hint: {"top": 1}
                    MDCard:
                        id: stamp_detail_last_10_selling_information
                        size_hint: .35, 1
                        height: self.minimum_height  # Automatická výška podle obsahu
                        orientation: "vertical"
                        border_radius: 20
                        radius: [15]
                        md_bg_color: 1,1,1,0.08
                        elevation: 2
                        line_width: 1
                        line_color: (1, 1, 1, 0.15)
                        padding: 10
                        MDLabel:
                            id: stamp_detail_catalogue_price_information_label
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            text: "Tabulka s obchodama na známce"
                            size_hint: 1, 0.1
                            font_size: "16sp" 
                            halign: "center"

